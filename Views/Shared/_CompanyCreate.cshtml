@model AdvertisingSystem.Models.Advertiser

@{
    ViewData["Title"] = "Create";
}

<h3>Create Company Ad</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrgNo" class="control-label"></label>
                <input asp-for="OrgNo" class="form-control" />
                <span asp-validation-for="OrgNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <h5>BillingAdress</h5>
            <div class="form-group">
                <label asp-for="BillingAdress.Adress" class="control-label"></label>
                <input asp-for="BillingAdress.Adress" class="form-control" />
                <span asp-validation-for="BillingAdress.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingAdress.ZipCode" class="control-label"></label>
                <input asp-for="BillingAdress.ZipCode" class="form-control" />
                <span asp-validation-for="BillingAdress.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingAdress.City" class="control-label"></label>
                <input asp-for="BillingAdress.City" class="form-control" />
                <span asp-validation-for="BillingAdress.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
